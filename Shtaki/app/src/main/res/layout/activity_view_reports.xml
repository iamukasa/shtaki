<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amusoft.shtaki.ViewReports">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbarViewReport"
        android:textColor="@color/white_pure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"

        android:background="@color/blue"/>


    <android.support.v7.widget.RecyclerView

        android:layout_below="@+id/toolbarViewReport"
        android:id="@+id/listReports"
        android:padding="10dp"
        android:elevation="4dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_web"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fab_button_margin_bottom"
        android:layout_marginRight="@dimen/fab_button_margin_right"
        app:pressedTranslationZ="12dp"
        app:elevation="6dp"
        app:borderWidth="0dp"/>

 </RelativeLayout>
