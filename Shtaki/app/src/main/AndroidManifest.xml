<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amusoft.shtaki" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".ShtakiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewReports"
            android:label="@string/title_activity_view_reports"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".PostReport"
            android:label="@string/title_activity_post_report"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ViewSingleReport"
            android:label="@string/title_activity_view_single_report"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
    </application>

</manifest>
